<IfModule mod_rewrite.c>
  Options +FollowSymlinks -Multiviews
  RewriteEngine On

#  SSL
#  RewriteCond %{SERVER_NAME} !^www.gdyhjk.cn$
#  RewriteRule ^.*$ https://www.gdyhjk.cn%{REQUEST_URI} [L,R]

#  RewriteCond %{SERVER_PORT} !^443$
#  RewriteRule ^.*$ https://www.gdyhjk.cn%{REQUEST_URI} [L,R]

  RewriteCond %{REQUEST_URI} !^/uploads/
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^(.*)$ index.php/$1 [QSA,PT,L]

  RewriteCond   %{REQUEST_FILENAME} -f
  RewriteCond   %{QUERY_STRING} ^(w|h)\=.+
  RewriteRule   ^(uploads/.+?\.(jpg|png)) index.php/task/util/cropimage?img=$1 [NC,L,QSA]

  RewriteCond   %{REQUEST_URI} ^/uploads/
  RewriteCond   %{REQUEST_FILENAME} !-f
  RewriteRule   ^(uploads/.+?\.(jpg|png)) index.php/task/util/cacheimage?img=$1 [NC,L,QSA]
</IfModule>
